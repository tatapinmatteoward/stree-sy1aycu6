---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/tricks', label: 'Tricks' },
  { href: '/events', label: 'Events' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-slate-800 text-white shadow-lg">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-pink-500">Street Spins Weekly</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="hover:text-pink-400 transition-colors duration-200"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-2xl">
        <i class="fas fa-bars"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-3 pb-3">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="hover:text-pink-400 transition-colors duration-200 py-2 px-4 rounded hover:bg-slate-700"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>