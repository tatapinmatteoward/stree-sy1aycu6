---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Welcome to Skateboard Spinners";
const pageDescription = "Explore the pulse of urban skateboarding with our weekly insights into culture, tricks, and the dynamic street scene.";

const latestDrops = [
  {
    title: "Ollie Mastery Guide",
    description: "Break down the basics and level up your pop. *Pro tip: Focus on your foot placement for that perfect snap.*",
    category: "Tutorial"
  },
  {
    title: "Street Art Meets Skate: NYC Edition",
    description: "How murals and mini-ramps are blending worlds in the concrete jungle.",
    category: "Culture"
  },
  {
    title: "Gear Spotlight",
    description: "Top trucks for tech tricks under $50.",
    category: "Gear"
  }
];

const featuredTrick = {
  name: "Kickflip",
  description: "A foundational trick that combines a kick with a flip motion. Master it and unlock the door to more complex tricks.",
  difficulty: "Intermediate"
};
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-r from-slate-900 to-rose-900 py-24 md:py-32">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          <span class="block">Welcome to</span>
          <span class="block bg-clip-text text-transparent bg-gradient-to-r from-rose-400 to-rose-300 mt-2">Skateboard Spinners</span>
        </h1>
        <p class="text-xl md:text-2xl text-rose-100 mb-10 max-w-2xl mx-auto">
          Weekly Insights into Skateboarding Culture and Tricks
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-3 bg-rose-600 hover:bg-rose-700 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-rose-900/30">
            Explore Latest Drops
          </button>
          <button class="px-8 py-3 bg-transparent border-2 border-white text-white hover:bg-white hover:text-slate-900 font-bold rounded-lg transition-all duration-300">
            Join the Community
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Trick Section -->
  <section class="py-20 bg-gradient-to-b from-slate-900 to-slate-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Trick of the Week</h2>
        <div class="w-24 h-1 bg-rose-500 mx-auto"></div>
      </div>
      
      <div class="max-w-4xl mx-auto bg-slate-800 rounded-2xl shadow-2xl overflow-hidden border border-slate-700">
        <div class="md:flex">
          <div class="md:w-1/2 bg-gradient-to-br from-slate-700 to-slate-800 p-8 flex flex-col justify-center">
            <div class="mb-4">
              <span class="inline-block px-3 py-1 bg-rose-900 text-rose-200 rounded-full text-sm font-bold">
                {featuredTrick.difficulty}
              </span>
            </div>
            <h3 class="text-3xl font-bold text-white mb-4">{featuredTrick.name}</h3>
            <p class="text-slate-300 mb-6">{featuredTrick.description}</p>
            <div class="mt-auto">
              <button class="text-rose-400 hover:text-rose-300 font-bold flex items-center">
                Watch Tutorial
                <i class="fas fa-play-circle ml-2"></i>
              </button>
            </div>
          </div>
          
          <div class="md:w-1/2 p-8 flex items-center justify-center bg-gradient-to-br from-slate-900 to-slate-800">
            <div class="relative">
              <div class="w-48 h-48 rounded-full border-4 border-rose-500 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full border-2 border-rose-400 flex items-center justify-center">
                  <span class="text-4xl font-bold text-white">KF</span>
                </div>
              </div>
              <div class="absolute -top-4 -right-4 bg-rose-600 text-white rounded-full w-12 h-12 flex items-center justify-center">
                <i class="fas fa-star"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Drops Section -->
  <section class="py-20 bg-slate-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Latest Drops</h2>
        <p class="text-slate-400 max-w-2xl mx-auto">Fresh content to keep you skating fresh and informed</p>
        <div class="w-24 h-1 bg-rose-500 mx-auto mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {latestDrops.map((drop, index) => (
          <div 
            class="bg-gradient-to-b from-slate-800 to-slate-900 rounded-2xl overflow-hidden border border-slate-700 transform transition-all duration-300 hover:scale-[1.02] hover:shadow-xl"
            key={index}
          >
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <span class="inline-block px-3 py-1 bg-slate-700 text-slate-300 rounded-full text-sm">
                  {drop.category}
                </span>
                <span class="text-rose-400">
                  <i class="fas fa-fire"></i>
                </span>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">{drop.title}</h3>
              <p class="text-slate-400 mb-4">{drop.description}</p>
              <button class="text-rose-400 hover:text-rose-300 font-medium flex items-center">
                Read more
                <i class="fas fa-arrow-right ml-2 text-sm"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Community Section -->
  <section class="py-20 bg-gradient-to-b from-slate-800 to-slate-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Join the Street Spins Community</h2>
        <p class="text-slate-300 mb-10 text-lg">
          Connect with fellow skaters, share your spins, and stay updated with the latest street culture.
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <button class="px-8 py-3 bg-rose-600 hover:bg-rose-700 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-rose-900/30 flex items-center justify-center">
            <i class="fab fa-instagram mr-2"></i> Follow on Instagram
          </button>
          <button class="px-8 py-3 bg-slate-700 hover:bg-slate-600 text-white font-bold rounded-lg transition-all duration-300 flex items-center justify-center">
            <i class="fab fa-discord mr-2"></i> Join Discord Server
          </button>
        </div>
        
        <div class="bg-slate-800 rounded-2xl p-8 border border-slate-700">
          <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/3 mb-6 md:mb-0 flex justify-center">
              <div class="bg-gradient-to-br from-slate-700 to-slate-800 rounded-full w-32 h-32 flex items-center justify-center">
                <i class="fas fa-users text-5xl text-rose-400"></i>
              </div>
            </div>
            <div class="md:w-2/3 md:pl-8 text-left">
              <h3 class="text-2xl font-bold text-white mb-3">Join Our Weekly Community Challenge</h3>
              <p class="text-slate-300 mb-4">
                Every Friday we post a new trick challenge. Share your attempts on social media with #StreetSpinsChallenge and you could be featured!
              </p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-rose-900 text-rose-200 rounded-full text-sm">Weekly</span>
                <span class="px-3 py-1 bg-rose-900 text-rose-200 rounded-full text-sm">Creative</span>
                <span class="px-3 py-1 bg-rose-900 text-rose-200 rounded-full text-sm">Interactive</span>
                <span class="px-3 py-1 bg-rose-900 text-rose-200 rounded-full text-sm">Community</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-slate-900 to-rose-900">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Never miss a spin again</h2>
        <p class="text-slate-200 mb-10 text-lg">
          Subscribe to our weekly newsletter and get the latest skate culture updates sent directly to your inbox.
        </p>
        
        <div class="max-w-md mx-auto flex">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow px-5 py-3 rounded-l-lg focus:outline-none text-slate-900"
          />
          <button class="px-6 py-3 bg-rose-600 hover:bg-rose-700 text-white font-bold rounded-r-lg transition-colors">
            Subscribe
          </button>
        </div>
        
        <p class="text-slate-400 mt-6 text-sm">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .animate-pulse-slow {
    animation: pulse 3s infinite;
  }
  
  .gradient-border {
    position: relative;
    border-radius: 12px;
  }
  
  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ff4d6d, #0f172a, #ff4d6d, #0f172a);
    border-radius: 14px;
    z-index: -1;
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
  }
  
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>
