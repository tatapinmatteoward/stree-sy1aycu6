---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Events";
const pageDescription = "Join the thrill of Street Spins Weekly's events! From urban skate jams to trick workshops, discover upcoming happenings that celebrate skateboarding culture and push the boundaries of dynamic urban skating.";

const upcomingEvents = [
  {
    id: 1,
    title: "Street Shred Jam 2023",
    date: "October 15, 2023",
    time: "2 PM - 8 PM",
    location: "Downtown Concrete Plaza, City Center",
    description: "Kick off the fall season with this high-energy skate jam! Expect freestyle competitions, live DJ sets, and vendor booths showcasing the latest gear. Open to all skill levels—bring your board and your vibe.",
    highlights: [
      "Best trick contests with cash prizes",
      "Live DJ sets",
      "Vendor booths with latest gear"
    ],
    entry: "Free, but RSVP required"
  },
  {
    id: 2,
    title: "Urban Trick Workshop",
    date: "November 5, 2023",
    time: "10 AM - 4 PM",
    location: "Rooftop Skate Park, East District",
    description: "Learn new tricks from professional skaters. Beginner to advanced levels covered. All equipment provided.",
    highlights: [
      "Pro trainer sessions",
      "Skill level workshops",
      "Free equipment provided"
    ],
    entry: "Free registration"
  },
  {
    id: 3,
    title: "Night Skate Session",
    date: "November 18, 2023",
    time: "6 PM - 10 PM",
    location: "Central Park Skate Zone",
    description: "Evening skate session with neon lighting. Perfect for those who love skating after dark.",
    highlights: [
      "Neon-lit session",
      "Night photography contest",
      "Food trucks on site"
    ],
    entry: "Free with membership"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-primary to-accent py-24">
    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
          Events
        </h1>
        <p class="text-xl md:text-2xl text-white mb-8 font-light">
          Join the thrill of Street Spins Weekly's events! 
        </p>
        <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-xl p-6 max-w-2xl mx-auto">
          <p class="text-lg text-white">
            From urban skate jams to trick workshops, discover upcoming happenings that celebrate skateboarding culture and push the boundaries of dynamic urban skating.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Events Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary mb-4">Upcoming Events</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
        <p class="mt-6 text-lg text-gray-700 max-w-3xl mx-auto">
          Get ready to hit the streets with *Street Spins Weekly*! Our events page is your go-to hub for all things skate in the urban jungle. Whether you're a pro shredder or just starting out, these gatherings bring the community together for epic sessions, skill-building, and pure adrenaline. Check out what's coming up and mark your calendars—spots fill fast!
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {upcomingEvents.map((event) => (
          <div 
            class="bg-white rounded-xl shadow-xl overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl"
          >
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-2xl font-bold text-primary">{event.title}</h3>
                <span class="bg-accent text-white text-sm font-bold px-3 py-1 rounded-full">
                  NEW
                </span>
              </div>
              
              <div class="flex items-center text-gray-600 mb-3">
                <i class="fas fa-calendar-alt mr-2 text-accent"></i>
                <span>{event.date} • {event.time}</span>
              </div>
              
              <div class="flex items-center text-gray-600 mb-4">
                <i class="fas fa-map-marker-alt mr-2 text-accent"></i>
                <span>{event.location}</span>
              </div>
              
              <p class="text-gray-700 mb-6">{event.description}</p>
              
              <div class="mb-6">
                <h4 class="font-bold text-primary mb-2 flex items-center">
                  <i class="fas fa-star text-accent mr-2"></i>
                  Highlights
                </h4>
                <ul class="list-disc pl-5 space-y-1 text-gray-700">
                  {event.highlights.map((highlight, index) => (
                    <li key={index}>{highlight}</li>
                  ))}
                </ul>
              </div>
              
              <div class="flex justify-between items-center">
                <span class="inline-block bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
                  {event.entry}
                </span>
                <button class="bg-accent hover:bg-[#ff3355] text-white px-6 py-2 rounded-lg font-medium transition-colors duration-300">
                  Register Now
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-20 bg-gradient-to-r from-primary to-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Join the Community?</h2>
      <p class="text-xl text-white max-w-3xl mx-auto mb-10">
        Be part of something bigger. Connect with fellow skateboarders, learn new tricks, and experience the best of urban skate culture.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-primary hover:bg-gray-100 font-bold py-3 px-8 rounded-lg text-lg transition-colors duration-300">
          Join Our Community
        </button>
        <button class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-primary font-bold py-3 px-8 rounded-lg text-lg transition-colors duration-300">
          View All Events
        </button>
      </div>
    </div>
  </section>

  <!-- Previous Events Banner -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-primary mb-4">Previous Events</h2>
        <p class="text-gray-700">Check out what made our past events unforgettable</p>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg p-6 max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-1/3 mb-6 md:mb-0 md:pr-6">
            <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-48 flex items-center justify-center">
              <i class="fas fa-calendar-alt text-4xl text-gray-400"></i>
            </div>
          </div>
          <div class="md:w-2/3">
            <h3 class="text-2xl font-bold text-primary mb-3">Summer Skate Festival 2023</h3>
            <p class="text-gray-700 mb-4">
              Our biggest event of the year brought together over 500 skaters from across the city. Featuring live music, competitions, and incredible workshops.
            </p>
            <div class="flex items-center text-gray-600">
              <i class="fas fa-calendar-alt mr-2"></i>
              <span>August 12-13, 2023</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .hover\:scale-105:hover {
    transform: scale(1.05);
  }

  .gradient-bg {
    background: linear-gradient(135deg, #0f172a 0%, #ff4d6d 100%);
  }

  .event-card {
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .event-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .event-highlight {
    position: relative;
    padding-left: 1.5rem;
  }

  .event-highlight::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    background: #ff4d6d;
    border-radius: 50%;
  }

  @media (max-width: 768px) {
    .event-card {
      transform: scale(1);
    }
    
    .event-card:hover {
      transform: scale(1.02);
    }
  }
</style>