---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Videos";
const pageDescription = "Dive into our collection of skateboarding videos featuring epic adventures, pro tips, and inspiring rides in natural settings. Perfect for skaters seeking motivation and skill-building content.";

const featuredVideos = [
  {
    id: 1,
    title: "Sunset Sessions at Coastal Ramps",
    description: "Watch pros carve lines as the ocean waves crash below.",
    duration: "5:32",
    category: "Adventure",
    featured: true
  },
  {
    id: 2,
    title: "Mountain Trail Shreds",
    description: "Follow a crew navigating rocky paths and jumps in the wilderness.",
    duration: "7:15",
    category: "Trail",
    featured: true
  },
  {
    id: 3,
    title: "Urban Ollies at Dawn",
    description: "Morning skate sessions in the heart of the city before it wakes up.",
    duration: "4:28",
    category: "Urban",
    featured: false
  },
  {
    id: 4,
    title: "Vertical Velocity",
    description: "Pro riders tackling the steepest vert ramps in the country.",
    duration: "6:42",
    category: "Vert",
    featured: false
  },
  {
    id: 5,
    title: "Desert Dunes",
    description: "Riding over massive sand dunes with nothing but gravity and skill.",
    duration: "5:10",
    category: "Desert",
    featured: false
  },
  {
    id: 6,
    title: "Forest Floor",
    description: "Skateboarding through the serene beauty of woodland trails.",
    duration: "6:55",
    category: "Trail",
    featured: false
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-green-900 to-green-700 py-24 md:py-32">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgdmlld0JveD0iMCAwIDIwIDIwIj48Y2lyY2xlIGN4PSIxMCIgY3k9IjEwIiByPSI0IiBmaWxsPSJub25lIiBzdHJva2U9IiNmZmYiIHN0cm9rZS13aWR0aD0iMSIvPjwvc3ZnPg==')]"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Videos
        </h1>
        <p class="text-xl md:text-2xl text-green-100 mb-8 max-w-2xl mx-auto">
          Dive into our collection of skateboarding videos featuring epic adventures, pro tips, and inspiring rides in natural settings
        </p>
        <div class="flex justify-center">
          <div class="bg-yellow-400 w-24 h-1 rounded-full"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Videos Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-gray-800">Featured Videos</h2>
        <div class="flex space-x-2">
          <span class="text-yellow-500"><i class="fas fa-star"></i></span>
          <span class="text-yellow-500"><i class="fas fa-star"></i></span>
          <span class="text-yellow-500"><i class="fas fa-star"></i></span>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredVideos.filter(video => video.featured).map((video) => (
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-200">
            <div class="relative">
              <div class="h-48 bg-gradient-to-r from-green-600 to-green-800 flex items-center justify-center">
                <div class="bg-white/20 backdrop-blur-sm rounded-full p-4">
                  <i class="fas fa-play text-white text-3xl"></i>
                </div>
              </div>
              <div class="absolute top-4 right-4 bg-yellow-400 text-gray-900 text-sm font-bold px-3 py-1 rounded-full">
                {video.duration}
              </div>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-xl font-bold text-gray-800">{video.title}</h3>
                <span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                  {video.category}
                </span>
              </div>
              <p class="text-gray-600 mb-4">{video.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">Featured</span>
                <button class="text-green-700 hover:text-green-900 font-medium flex items-center">
                  Watch Now
                  <i class="fas fa-arrow-right ml-2 text-sm"></i>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- All Videos Grid -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">All Videos</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Explore our complete collection of skateboarding adventures and expert tips</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredVideos.map((video) => (
          <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100">
            <div class="relative">
              <div class="h-48 bg-gradient-to-r from-green-500 to-green-700 flex items-center justify-center">
                <div class="bg-white/20 backdrop-blur-sm rounded-full p-3">
                  <i class="fas fa-play text-white text-2xl"></i>
                </div>
              </div>
              <div class="absolute top-4 right-4 bg-yellow-400 text-gray-900 text-xs font-bold px-2 py-1 rounded-full">
                {video.duration}
              </div>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-lg font-bold text-gray-800">{video.title}</h3>
                <span class="bg-green-100 text-green-800 text-xs font-semibold px-2 py-0.5 rounded">
                  {video.category}
                </span>
              </div>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2">{video.description}</p>
              <button class="text-green-700 hover:text-green-900 font-medium text-sm flex items-center">
                Watch Now
                <i class="fas fa-arrow-right ml-2 text-xs"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <button class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
          Load More Videos
          <i class="fas fa-arrow-down ml-2"></i>
        </button>
      </div>
    </div>
  </section>

  <!-- Inspiration Section -->
  <section class="py-16 bg-gradient-to-br from-green-800 to-green-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Skateboarding Adventures in Nature</h2>
        <p class="text-xl text-green-100 mb-8 max-w-2xl mx-auto">
          Welcome to the Videos section of Ramp & Roll Digest, your go-to hub for visually stunning skateboarding content. 
          Immerse yourself in the thrill of the ride amidst breathtaking natural landscapes, from urban parks to rugged trails.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl border border-white/20">
            <div class="text-yellow-400 text-3xl mb-4">
              <i class="fas fa-mountain"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Mountain Rides</h3>
            <p class="text-green-100">Explore wilderness trails that challenge both skill and courage.</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl border border-white/20">
            <div class="text-yellow-400 text-3xl mb-4">
              <i class="fas fa-water"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Coastal Sessions</h3>
            <p class="text-green-100">Skate through scenic coastal landscapes with dramatic ocean views.</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl border border-white/20">
            <div class="text-yellow-400 text-3xl mb-4">
              <i class="fas fa-city"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Urban Adventures</h3>
            <p class="text-green-100">Discover creative spots in city environments that inspire.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Join Our Skateboarding Community</h2>
        <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
          Subscribe to our newsletter for exclusive video content, tips, and community updates
        </p>
        <div class="max-w-md mx-auto flex">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow px-4 py-3 rounded-l-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
          />
          <button class="bg-green-700 hover:bg-green-800 text-white px-6 py-3 rounded-r-lg font-medium transition-colors">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .delay-100 {
    animation-delay: 0.1s;
  }
  
  .delay-200 {
    animation-delay: 0.2s;
  }
  
  .delay-300 {
    animation-delay: 0.3s;
  }
  
  .delay-400 {
    animation-delay: 0.4s;
  }
  
  .delay-500 {
    animation-delay: 0.5s;
  }
</style>

<script>
  // Simple animation on page load
  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.animate-fade-in-up');
    elements.forEach((el, index) => {
      el.style.animationDelay = `${index * 0.1}s`;
    });
  });
</script>