---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Shop - Ramp & Roll Digest";
const pageDescription = "Discover our curated selection of skateboarding essentials, apparel, and accessories designed for your next adventure. Embrace the minimalist, nature-inspired vibe of Ramp & Roll Digest while gearing up for the streets or the skate park.";

const apparelItems = [
  {
    name: "Eco-Friendly Tee",
    description: "Soft cotton blend with subtle wave graphics",
    price: "$28",
    color: "bg-green-800"
  },
  {
    name: "Adventure Hoodie",
    description: "Lightweight fleece for cooler rides",
    price: "$52",
    color: "bg-green-900"
  },
  {
    name: "Trail Shorts",
    description: "Quick-dry fabric for unrestricted movement",
    price: "$36",
    color: "bg-green-700"
  }
];

const gearItems = [
  {
    name: "Urban Grip Tape",
    description: "Enhanced traction for urban riding",
    price: "$12",
    color: "bg-amber-600"
  },
  {
    name: "Trail Cruiser Wheels",
    description: "Durable wheels for rough surfaces",
    price: "$38",
    color: "bg-amber-700"
  },
  {
    name: "Ramp & Roll Backpack",
    description: "Sustainable materials with secure compartments",
    price: "$42",
    color: "bg-amber-800"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-green-900 to-green-700 py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-64 h-64 rounded-full bg-white"></div>
      <div class="absolute bottom-20 right-20 w-48 h-48 rounded-full bg-white"></div>
      <div class="absolute top-1/3 right-1/4 w-32 h-32 rounded-full bg-white"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Shop at Ramp & Roll Digest
        </h1>
        <p class="text-xl text-green-100 mb-8 max-w-2xl mx-auto">
          Your Essential Guide to Skateboarding Adventures and Tips â€“ Now with gear to fuel your ride.
        </p>
        <div class="flex justify-center">
          <div class="h-1 w-24 bg-amber-400 rounded-full"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-semibold text-green-900 mb-6">Welcome to Our Minimalist Shop</h2>
        <div class="flex justify-center mb-8">
          <div class="h-1 w-16 bg-amber-400 rounded-full"></div>
        </div>
        <p class="text-lg text-gray-700 mb-8 leading-relaxed">
          Where nature-inspired designs meet high-quality skate essentials. We've handpicked products 
          that blend functionality with the raw spirit of skateboarding. Whether you're hitting urban 
          ramps or rolling through scenic trails, find what you need to elevate your experience.
        </p>
        <div class="flex justify-center">
          <div class="inline-flex items-center px-6 py-3 bg-green-800 text-white rounded-full hover:bg-green-900 transition duration-300">
            <i class="fas fa-shopping-bag mr-2"></i>
            <span>Shop Now</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Apparel Section -->
  <section class="py-16 bg-green-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-green-900 mb-4">Apparel</h2>
        <p class="text-xl text-green-700 max-w-2xl mx-auto">
          Elevate your style with sustainable, breathable pieces perfect for all-day sessions.
        </p>
        <div class="flex justify-center mt-6">
          <div class="h-1 w-24 bg-amber-400 rounded-full"></div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {apparelItems.map((item, index) => (
          <div key={index} class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:-translate-y-2">
            <div class={`${item.color} h-48 flex items-center justify-center`}>
              <div class="bg-white bg-opacity-20 rounded-full w-32 h-32 flex items-center justify-center">
                <i class="fas fa-tshirt text-white text-5xl"></i>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold text-green-900 mb-2">{item.name}</h3>
              <p class="text-gray-600 mb-4">{item.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-xl font-bold text-green-800">{item.price}</span>
                <button class="px-4 py-2 bg-green-800 text-white rounded-lg hover:bg-green-900 transition duration-300">
                  Add to Cart
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gear Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-green-900 mb-4">Gear</h2>
        <p class="text-xl text-green-700 max-w-2xl mx-auto">
          Reliable tools to keep you rolling with confidence.
        </p>
        <div class="flex justify-center mt-6">
          <div class="h-1 w-24 bg-amber-400 rounded-full"></div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {gearItems.map((item, index) => (
          <div key={index} class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:-translate-y-2">
            <div class={`${item.color} h-48 flex items-center justify-center`}>
              <div class="bg-white bg-opacity-20 rounded-full w-32 h-32 flex items-center justify-center">
                <i class="fas fa-wrench text-white text-5xl"></i>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold text-green-900 mb-2">{item.name}</h3>
              <p class="text-gray-600 mb-4">{item.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-xl font-bold text-green-800">{item.price}</span>
                <button class="px-4 py-2 bg-amber-600 text-white rounded-lg hover:bg-amber-700 transition duration-300">
                  Add to Cart
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green-800 to-green-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Roll?</h2>
      <p class="text-xl text-green-100 max-w-2xl mx-auto mb-10">
        Explore our full collection and find the perfect gear to complement your skateboarding journey.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <div class="inline-flex items-center px-8 py-4 bg-white text-green-800 font-bold rounded-full hover:bg-green-50 transition duration-300">
          <i class="fas fa-arrow-right mr-2"></i>
          <span>Shop All Products</span>
        </div>
        <div class="inline-flex items-center px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white hover:text-green-800 transition duration-300">
          <i class="fas fa-info-circle mr-2"></i>
          <span>Learn More</span>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .floating {
    animation: float 6s ease-in-out infinite;
  }
  
  .gradient-border {
    position: relative;
    border-radius: 12px;
    padding: 1px;
  }
  
  .gradient-border::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 12px;
    background: linear-gradient(45deg, #1e3a1e, #fbbf24, #1e3a1e);
    z-index: -1;
  }
  
  .custom-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
</style>